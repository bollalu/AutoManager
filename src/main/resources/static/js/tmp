function caricaListaMarche(filtro)
{
	var lista = [''];
	var cp = $("#contextPath").val();
	cp = (cp == "/")? "":cp;
	var url = cp+"/json/modelli/marca?q="+filtro;
	$.ajax({
				url:url, 
				dataType:"json"
	})
	.done(function(data) {
		$(data.carburanti).each(function(index, element){
			lista.push(element.descrizione);
	    });
    })
    return lista;
}